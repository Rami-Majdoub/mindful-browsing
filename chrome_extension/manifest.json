{
  "manifest_version": 2,

  "name": "Mindful Browsing",
  "description": "Beautifully interrupts mindless browsing, and gets you back to your life.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "webNavigation",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["mindful.js"]
    }
  ],
  "web_accessible_resources": [
    "images/*.png",
    "images/*.jpg",
    "style.css",
    "mindful.js"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}